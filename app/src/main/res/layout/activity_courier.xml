<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CourierLoginActivity">


    <RelativeLayout
        android:id="@+id/courier_rl"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:background="@color/colorRed">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/app_emblem"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/courier_login_tittle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/courier_rl"
        android:layout_margin="30dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:textColor="@color/colorRed"
        android:text="Seller Login Form"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/courier_login_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/courier_login_tittle"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:hint="email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/courier_login_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/courier_login_email"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:hint="password"
        android:inputType="text" />

    <Button
        android:id="@+id/courier_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/courier_login_password"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/button_5"
        android:textColor="@color/colorWhite"
        android:text="Login"
        android:textAllCaps="false"
        android:textSize="18sp" />

</RelativeLayout>